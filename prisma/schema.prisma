// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Profile fields
  companyName     String?
  industry        String?
  language        String? // e.g., "en", "es", "pa"
  complianceFocus String? // e.g., "IRS,DOT,FDA"
}
