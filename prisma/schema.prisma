// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Profile fields
  companyName     String? // e.g., "Kaushal Logistics LLC"
  industry        String? // e.g., "Trucking", "Restaurant"
  language        String? // e.g., "en", "es", "pa"
  complianceFocus String? // e.g., "IRS,DOT,FDA" (comma-separated list)
}
