model Profile {
  id        String   @id @default(uuid())
  email     String   @unique
  fullName  String?  @map("full_name")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // ===== BizGuard billing / subscription fields =====
  /// Current BizGuard plan for this user.
  /// "free" | "business" | "business_pro"
  plan String @default("free")

  /// Stripe customer ID (cus_xxx)
  stripeCustomerId String? @map("stripe_customer_id")

  /// Stripe subscription ID (sub_xxx)
  stripeSubscriptionId String? @map("stripe_subscription_id")

  /// Stripe subscription status ("active", "trialing", "canceled", etc.)
  subscriptionStatus String? @map("subscription_status")

  /// End of current billing period
  subscriptionCurrentPeriodEnd DateTime? @map("subscription_current_period_end")

  @@map("profiles")
  @@schema("public")
}
